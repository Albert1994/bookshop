@{
    ViewBag.Title = "Book shop";
}


<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr>
            <td><p>Книга</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td><p></p></td>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/buy/@b.id">Купить</a></p></td>
            </tr>
        }
    </table>
</div>